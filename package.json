{
  "name": "giv-society-backend",
  "version": "1.0.0",
  "description": "GIV Society Ethiopia Backend System - A comprehensive Node.js backend for volunteer and donor management with multilingual support",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "db:migrate": "prisma migrate dev",
    "db:generate": "prisma generate",
    "db:seed": "node src/prisma/seed.js",
    "db:studio": "prisma studio"
  },
  "keywords": [
    "giv-society",
    "ethiopia",
    "volunteer-management",
    "donor-management",
    "multilingual",
    "nodejs",
    "express",
    "mysql"
  ],
  "author": "GIV Society Development Team",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^6.10.1",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "dotenv": "^17.0.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^2.0.1",
    "mysql2": "^3.14.1",
    "nodemailer": "^7.0.3",
    "prisma": "^6.10.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/node": "^24.0.7",
    "eslint": "^9.30.0",
    "jest": "^30.0.3",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "supertest": "^7.1.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
